            </div>
            <div class="clearfix"> </div>
        </div>
        <!-- //header-ends -->
        <!-- main content start-->
        <div id="page-wrapper">
            @*<div class="main-page compose">*@
                <div class="col-lg-12 compose-right widget-shadow" style="width:95%;">
                    <div class="panel-default">
                        <div class="panel-heading">
                            Create a News
                        </div>
                        <div class="panel-body">
                            @if (ViewBag.Error == true)
                            {
                                <div class="alert alert-info">
                                    @Html.ValidationMessage("Error")
                                </div>
                            }


                            @using (Html.BeginForm("CreateNews", "Admin", FormMethod.Post, new { @class = "com-mail form-horizontal" }))
                            {
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control1 control3", @placeholder = "Subject", @required = "required" })

                                @Html.TextAreaFor(model => model.Details, new {  @class = "form-control1 control2", @placeholder = "Details", @required = "required" })

                                <div class="form-group">
                                    <label for="selector1" class="col-sm-1 control-label">To</label>
                                    <div class="col-sm-11">
                                        @Html.DropDownListFor(model => model.For,
                                          new List<SelectListItem> {
                                               new SelectListItem { Value = "All" , Text = "All" },
                                               new SelectListItem { Value = "Customers" , Text = "All Customers" },
                                               new SelectListItem { Value = "Regular" , Text = "Regular Customers" },
                                               new SelectListItem { Value = "Premium" , Text = "Premium Customers" },
                                               new SelectListItem { Value = "Staff" , Text = "Staff" },
                                            },
                                          new { @class = "form-control", id = "sel1" })
                                    </div>
                                </div>
                                <input type="submit" value="Send News">

                            }
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            @*</div>*@
        </div>




        <!-- main content end-->
