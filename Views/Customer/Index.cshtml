@model FitnessTime.Models.User
@{
    List<FitnessTime.Models.Tip> allTips = (List<FitnessTime.Models.Tip>)ViewBag.Tips;
    List<FitnessTime.Models.News> allTimeNews = (List<FitnessTime.Models.News>)ViewBag.AllNews;

}
<!DOCTYPE HTML>
<html>
<head>
    <title>Admin Panel - FitnessTime</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Novus Admin Panel Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/AdminPanel/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="~/Content/AdminPanel/style.css" rel='stylesheet' type='text/css' />
    <!-- font CSS -->
    <!-- font-awesome icons -->
    <link href="~/Content/AdminPanel/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <!-- js-->
    <script src="~/Scripts/AdminPanel/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/AdminPanel/modernizr.custom.js"></script>
    <!--webfonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <!--//webfonts-->
    <!--animate-->
    <link href="~/Content/AdminPanel/animate.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/Scripts/AdminPanel/wow.min.js"></script>
    <script>
		 new WOW().init();
    </script>
    <!--//end-animate-->
    <!-- chart -->
    <script src="~/Scripts/AdminPanel/Chart.js"></script>
    <!-- //chart -->
    <!--Calender-->
    <link rel="stylesheet" href="~/Content/AdminPanel/clndr.css" type="text/css" />
    <script src="~/Scripts/AdminPanel/underscore-min.js" type="text/javascript"></script>
    <script src="~/Scripts/AdminPanel/moment-2.2.1.js" type="text/javascript"></script>
    <script src="~/Scripts/AdminPanel/clndr.js" type="text/javascript"></script>
    <script src="~/Scripts/AdminPanel/site.js" type="text/javascript"></script>
    <!--End Calender-->
    <!-- Metis Menu -->
    <script src="~/Scripts/AdminPanel/metisMenu.min.js"></script>
    <script src="~/Scripts/AdminPanel/custom.js"></script>
    <link href="~/Content/AdminPanel/custom.css" rel="stylesheet">
    <!--//Metis Menu -->
</head>
<body class="cbp-spmenu-push">
    <div class="main-content">
        <!--left-fixed -navigation-->
        <div class=" sidebar" role="navigation">
            <div class="navbar-collapse">
                <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="~/Customer/Index" class="active"><i class="fa fa-home nav_icon"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="~/Customer/Notifications"><i class="fa fa-bullhorn nav_icon"></i>All Notifications</a>
                            <!-- /nav-second-level -->
                        </li>
                        <li class="">
                            <a href="~/Customer/DailyProgress"><i class="fa fa-bar-chart nav_icon"></i>Daily Progress</a>
                        </li>
                        <li>
                            <a href="~/Customer/Trainers"><i class="fa fa-home nav_icon"></i>Trainers/Coaches</a>
                        </li>

                        <li>
                            <a href="~/Customer/Appointment"><i class="fa fa-pencil-square-o nav_icon"></i>Request for Appointment</a>
                        </li>
                        <li>
                            <a href="~/Customer/Calculator"><i class="fa fa-calendar nav_icon"></i>Health Calculator</a>
                        </li>

                        <li>
                            <a href="~/Customer/ProfileSettings"><i class="fa fa-cogs nav_icon"></i>Profile Settings</a>
                        </li>

                    </ul>
                    <!-- //sidebar-collapse -->
                </nav>
            </div>
        </div>
        <!--left-fixed -navigation-->
        <!-- header-starts -->
        <div class="sticky-header header-section ">
            <div class="header-left">
                <!--toggle button start-->
                <button id="showLeftPush"><i class="fa fa-bars"></i></button>
                <!--toggle button end-->
                <!--logo -->
                <div class="logo">
                    <a href="~/Customer/Index">
                        <h1>FitnessTime</h1>
                        <span>AdminPanel</span>
                    </a>
                </div>
                <!--//logo-->

                <div class="clearfix"> </div>
            </div>
            <div class="header-right">
                <div class="profile_details_left">


                    <!--notifications of menu start -->
                    <ul class="nofitications-dropdown">

                        <li class="dropdown head-dpdn">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-bell"></i><span class="badge blue">@ViewBag.NewsCount</span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="notification_header">
                                        <h3>You have @ViewBag.NewsCount new notification</h3>
                                    </div>
                                </li>

                                @{
                                    int i = 0;
                                    foreach (FitnessTime.Models.News news in allTimeNews)
                                    {
                                        <li style="width: 220px; overflow: hidden; white-space: nowrap;  text-overflow: ellipsis;">
                                            <a href="~/Customer/Notifications">
                                                <div class="user_img"><img src="~/images/Profile/@news.User.Picture" width="34" height="34" alt=""></div>
                                                <div class="notification_desc" style="width: 140px; overflow: hidden; white-space: nowrap;  text-overflow: ellipsis;">
                                                    <p>@news.Subject</p>
                                                    <p><span>@news.Date.ToShortTimeString() - @news.Date.ToShortDateString()</span></p>
                                                </div>
                                                <div class="clearfix"></div>
                                            </a>
                                        </li>
                                        i++;
                                        if(i == 3)
                                        {
                                            break;
                                        }
                                    }
                                }

                                <li>
                                    <div class="notification_bottom">
                                        <a href="~/Customer/Notifications">See all notifications</a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                    <div class="clearfix"> </div>
                </div>


                <!--notification menu end -->


                <div class="profile_details">
                    <ul>
                        <li class="dropdown profile_details_drop">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <div class="profile_img">
                                    <span class="prfil-img"><img src="~/images/Profile/@Session["Picture"]" alt="" width="50" height="50" style="border-radius: 50%"> </span>
                                    <div class="user-name">
                                        <p>@Session["Name"]</p>
                                        <span>@Session["Authority"]</span>
                                    </div>
                                    <i class="fa fa-angle-down lnr"></i>
                                    <i class="fa fa-angle-up lnr"></i>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                            <ul class="dropdown-menu drp-mnu">
                                <li> <a href="~/Customer/ProfileSettings"><i class="fa fa-user"></i> Profile</a> </li>
                                <li> <a href="~/Customer/Logout"><i class="fa fa-sign-out"></i> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
        <!-- //header-ends -->
        <!-- main content start-->

        <div id="page-wrapper">
            <div class="main-page">
                <div class="tables">
                    <div class="bs-example widget-shadow" data-example-id="hoverable-table" style="min-height:400px">
                        <div class="text-center col-lg-12">
                            <h2 style="color:blue; margin-bottom:20px;">
                                Welcome to your Dashboard
                            </h2>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-7">
                            <div class="col-lg-8">
                                <h4 style="margin-bottom:2px;">
                                    Your Account Type:
                                    @if (Model.Type == "Requested")
                                    {
                                        <b>Regular</b>
                                    }
                                    else
                                    {
                                        <b>@Model.Type</b>
                                    }
                                </h4>
                            </div>
                            <div class="col-lg-4 pull-left">
                                @if (Model.Type == "Regular")
                                {
                                    <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" onclick="Request(this.id)">Request Premium</button>
                                }
                                else if (Model.Type == "Requested")
                                {
                                    <button disabled="disabled" class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]">Premium Requested</button>
                                }
                                else { }
                            </div>

                            <div class="text-center col-sm-12">
                                <h4 style="color:blue; margin-top:20px; margin-bottom:10px;">
                                    Your Active Services
                                </h4>
                            </div>

                            <div class="col-lg-12 padding-5">
                                <div class="col-lg-8">
                                    <h4 style="margin-bottom:2px;">
                                        Aerobics:
                                        @if (ViewBag.Aerobics == true)
                                        {
                                            <b>Joined</b>
                                        }
                                        else if(Model.Type == "Premium")
                                        {
                                            <b>Joined</b>
                                        }
                                        else
                                        {
                                            <b>Not Joined</b>
                                        }
                                    </h4>
                                </div>
                                <div class="col-lg-4 pull-left" id="a+@Session["Id"]">
                                    @if (ViewBag.Aerobics == false)
                                    {
                                        <button class="center-block btn btn-success col-sm-12 padding-5" id="@Session["Id"]" onclick="JoinAerobics(this.id)">Join</button>
                                    }
                                    else if (Model.Type == "Premium")
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" disabled>Active in Premium</button>
                                    }
                                    else
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" onclick="LeaveAerobics(this.id)">Leave</button>
                                    }
                                </div>
                            </div>

                            <div class="col-lg-12 padding-5">
                                <div class="col-lg-8">
                                    <h4 style="margin-bottom:2px;">
                                        Yoga:
                                        @if (ViewBag.Yoga == true)
                                        {
                                            <b>Joined</b>
                                        }
                                        else if (Model.Type == "Premium")
                                        {
                                            <b>Joined</b>
                                        }
                                        else
                                        {
                                            <b>Not Joined</b>
                                        }
                                    </h4>
                                </div>
                                <div class="col-lg-4 pull-left" id="y+@Session["Id"]">
                                    @if (ViewBag.Yoga == false)
                                    {
                                        <button class="center-block btn btn-success col-sm-12 padding-5" id="@Session["Id"]" onclick="JoinYoga(this.id)">Join</button>
                                    }
                                    else if (Model.Type == "Premium")
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" disabled>Active in Premium</button>
                                    }
                                    else
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" onclick="LeaveYoga(this.id)">Leave</button>
                                    }
                                </div>
                            </div>

                            <div class="col-lg-12 padding-5">
                                <div class="col-lg-8">
                                    <h4 style="margin-bottom:2px;">
                                        Physical:
                                        @if (ViewBag.Physical == true)
                                        {
                                            <b>Joined</b>
                                        }
                                        else if (Model.Type == "Premium")
                                        {
                                            <b>Joined</b>
                                        }
                                        else
                                        {
                                            <b>Not Joined</b>
                                        }
                                    </h4>
                                </div>
                                <div class="col-lg-4 pull-left" id="p+@Session["Id"]">
                                    @if (ViewBag.Physical == false)
                                    {
                                        <button class="center-block btn btn-success col-sm-12 padding-5" id="@Session["Id"]" onclick="JoinPhysical(this.id)">Join</button>
                                    }
                                    else if (Model.Type == "Premium")
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" disabled>Active in Premium</button>
                                    }
                                    else
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" onclick="LeavePhysical(this.id)">Leave</button>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-12 padding-5">
                                <div class="col-lg-8">
                                    <h4 style="margin-bottom:2px;">
                                        Cardio:
                                        @if (ViewBag.Cardio == true)
                                        {
                                            <b>Joined</b>
                                        }
                                        else if (Model.Type == "Premium")
                                        {
                                            <b>Joined</b>
                                        }
                                        else
                                        {
                                            <b>Not Joined</b>
                                        }
                                    </h4>
                                </div>
                                <div class="col-lg-4 pull-left" id="c+@Session["Id"]">
                                    @if (ViewBag.Cardio == false)
                                    {
                                        <button class="center-block btn btn-success col-sm-12 padding-5" id="@Session["Id"]" onclick="JoinCardio(this.id)">Join</button>
                                    }
                                    else if (Model.Type == "Premium")
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" disabled>Active in Premium</button>
                                    }
                                    else
                                    {
                                        <button class="center-block btn btn-danger col-sm-12 padding-5" id="@Session["Id"]" onclick="LeaveCardio(this.id)">Leave</button>
                                    }
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-5">
                            <div class="col-md-12 profile widget-shadow chat-mdl-grid"style="min-width:95%; min-height:300px;">
                                <h4 class="title3">Tips from our Experts</h4>
                                <div class="scrollbar scrollbar1">
                                    
                                    @foreach (FitnessTime.Models.Tip tip in allTips)
                                    {
                                        <div class="activity-row activity-row1 activity-right">
                                            <div class="col-xs-3 activity-img"><img src="~/images/Profile/@tip.User.Picture" width="46" height="46" style="border-radius: 50%" class="img-responsive" alt="Nutritionist"></div>
                                            <div class="col-xs-9 activity-img1">
                                                <div class="activity-desc-sub">
                                                    <span style="color:black; font-size:12px;"><b><i>@tip.User.Name</i></b></span>
                                                    <p>@tip.Details</p>
                                                    <span>@tip.Date.ToShortTimeString() - @tip.Date.ToShortDateString()</span>
                                                </div>
                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <script>
                            function Request(id) {
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/ReqPremium", function (msg) {
                                    document.getElementById(id).innerHTML = "Requested";
                                });
                            }

                            function JoinAerobics(id) {
                                document.getElementById("a+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/JoinA", function (msg) {
                                    document.getElementById("a+" + id).innerHTML = 'Joined';
                                    document.getElementById("a+" + id).style.visibility = 'visible';

                                });
                            }

                            function LeaveAerobics(id) {
                                document.getElementById("a+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/LeaveA", function (msg) {
                                    document.getElementById("a+" + id).innerHTML = 'Left Program';
                                    document.getElementById("a+" + id).style.visibility = 'visible';

                                });
                            }

                            function JoinYoga(id) {
                                document.getElementById("y+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/JoinY", function (msg) {
                                    document.getElementById("y+" + id).innerHTML = 'Joined';
                                    document.getElementById("y+" + id).style.visibility = 'visible';

                                });
                            }

                            function LeaveYoga(id) {
                                document.getElementById("y+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/LeaveY", function (msg) {
                                    document.getElementById("y+" + id).innerHTML = 'Left Program';
                                    document.getElementById("y+" + id).style.visibility = 'visible';

                                });
                            }

                            function JoinPhysical(id) {
                                document.getElementById("p+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/JoinP", function (msg) {
                                    document.getElementById("p+" + id).innerHTML = 'Joined';
                                    document.getElementById("p+" + id).style.visibility = 'visible';

                                });
                            }

                            function LeavePhysical(id) {
                                document.getElementById("p+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/LeaveP", function (msg) {
                                    document.getElementById("p+" + id).innerHTML = 'Left Program';
                                    document.getElementById("p+" + id).style.visibility = 'visible';
                                });
                            }

                            function JoinCardio(id) {
                                document.getElementById("c+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/JoinC", function (msg) {
                                    document.getElementById("c+" + id).innerHTML = 'Joined';
                                    document.getElementById("c+" + id).style.visibility = 'visible';
                                });
                            }

                            function LeaveCardio(id) {
                                document.getElementById("c+" + id).style.visibility = 'hidden';
                                document.getElementById(id).disabled = true;
                                $.getJSON("/Customer/LeaveC", function (msg) {
                                    document.getElementById("c+" + id).innerHTML = 'Left Program';
                                    document.getElementById("c+" + id).style.visibility = 'visible';
                                });
                            }

                        </script>

                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>

        <!--footer-->
        <div class="footer">
            <p>&copy; 2018 <a href="~/Customer/Index">FitnessTime</a>. All Rights Reserved</p>
        </div>
        <!--//footer-->
    </div>
    <!-- Classie -->
    <script src="~/Scripts/AdminPanel/classie.js"></script>
    <script>
			var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
				showLeftPush = document.getElementById( 'showLeftPush' ),
				body = document.body;

			showLeftPush.onclick = function() {
				classie.toggle( this, 'active' );
				classie.toggle( body, 'cbp-spmenu-push-toright' );
				classie.toggle( menuLeft, 'cbp-spmenu-open' );
				disableOther( 'showLeftPush' );
			};


			function disableOther( button ) {
				if( button !== 'showLeftPush' ) {
					classie.toggle( showLeftPush, 'disabled' );
				}
			}
    </script>
    <!--scrolling js-->
    <script src="~/Scripts/AdminPanel/jquery.nicescroll.js"></script>
    <script src="~/Scripts/AdminPanel/scripts.js"></script>
    <!--//scrolling js-->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/AdminPanel/bootstrap.js"> </script>
</body>
</html>