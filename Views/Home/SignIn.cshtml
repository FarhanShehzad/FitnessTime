@model FitnessTime.Models.User

<!DOCTYPE html>
<html>
<head>
    <title>Sign In - FitnessTime</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Badge Signup Form template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/Content/SignUp/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'><!--web font-->
    <!-- //web font -->


    <!-- Remember to include jQuery :) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

    <!-- jQuery Modal -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

</head>

<style>
    .form-control {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}

    .btn {
    display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: normal;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
}

    .btn-primary {
        color: #fff;
        background-color: #337ab7;
        border-color: #2e6da4;
    }

</style>
<body>
    <!-- main -->
    <div class="w3layouts-main">
        <h1 style="color:black; font-weight:bold; margin-bottom:-30px; margin-top:-10px">Login to Proceed...</h1>
        <div class="agilesign-form">
            <div class="agileits-top">

                @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
                {
                    <div class="styled-input w3ls-text" style="margin-top:30px; margin-bottom:0px;">
                        @Html.TextBoxFor(model => model.Email, new { required = "required" })
                        @Html.LabelFor(model => model.Email)
                        <span></span>
                    </div>
                    <p style="color:yellow; font-size:14px; display:inline-block; margin-top:0px;">@Html.ValidationMessageFor(model => model.Email)</p>

                    <div class="styled-input w3ls-text" style="margin-top:10px; margin-bottom:0px;">
                        @Html.PasswordFor(model => model.Password, new { required = "required" })
                        @Html.LabelFor(model => model.Password)
                        <span></span>
                    </div>
                    <p style="color:yellow; font-size:14px; display:inline-block; margin-top:0px;"> @Html.ValidationMessageFor(model => model.Password)</p>


                    <div class="w3agile-btm" style="margin-bottom:-50px">
                        <p>Forgot Password?<a href="#ex1" rel="modal:open">Click Here</a> to recover...</p>
                    </div>
                    <div class="agileits-bottom">
                        <input type="submit" value="Login">
                    </div>
                }
            </div>
            <p style="color:yellow; text-align:center; margin-top:20px; margin-bottom:-20px; font-size:20px;">@Html.ValidationMessage("Error")</p>
            <div class="w3agile-btm">
                <p>Don't Have an Account?<a href="~/Home/SignUp">Register Now!</a> </p>
            </div>
        </div>
    </div>

    <div id="ex1" class="modal" style="padding:10px;">
        <p>Enter Your Email Address</p>
        <input type="email" style="width:450px" class="form-control" id="myEmail" placeholder="Enter Your Email" required>
        <span id="ErrorMsg" class="help-block" style="color:darkred; font-size:15px;"></span><br />
        <button id="mybtn" style="margin:10px;" type="submit" class="btn btn-primary" onclick="ForgotPass(this.id)">Submit</button>
    </div>


    <script>
            function ForgotPass(id) {
                document.getElementById("mybtn").disabled = true;
                document.getElementById("ErrorMsg").style.visibility = 'hidden';
                var email = document.getElementById("myEmail").value;
                $.getJSON("/Home/ForgotPass?e=" + email, function (msg) {
                    document.getElementById("ErrorMsg").innerHTML = msg;
                    document.getElementById("ErrorMsg").style.visibility = 'visible';
                    document.getElementById("mybtn").disabled = false;
                });
            }
    </script>







    <!-- //main -->
    <!-- copyright -->
    <div class="copyright">
        <p style="color:black">© 2018 <a href="~/Home/Index">FitnessTime</a>. All rights reserved.</p>
    </div>
    <!-- //copyright -->
</body>
</html>