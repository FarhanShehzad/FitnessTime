@model FitnessTime.Models.User

<!DOCTYPE html>
<html>
<head>
    <title>Sign Up - FitnessTime</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Badge Signup Form template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/Content/SignUp/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'><!--web font-->
    <!-- //web font -->
</head>
<body>
    <!-- main -->
    <div class="w3layouts-main">
        <h1 style="color:black; font-weight:bold; margin-bottom:-30px; margin-top:-10px">Let's get Started...</h1>
        <div class="agilesign-form">
            <div class="agileits-top">

                
                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                {
                    <div class="styled-input w3ls-text" style="margin-top:30px; margin-bottom:0px;">
                        @Html.TextBoxFor(model => model.Name, new { required = "required" })
                        @Html.LabelFor(model => model.Name)
                        <span></span>
                    </div>
                    <p style="color:yellow; font-size:14px; display:inline-block; margin-top:0px;">@Html.ValidationMessageFor(model => model.Name)</p>


                    <div class="styled-input w3ls-text" style="margin-top:10px; margin-bottom:0px;">
                        @Html.TextBoxFor(model => model.Email, new { required = "required" })
                        @Html.LabelFor(model => model.Email)
                        <span></span>
                    </div>
                    <p style="color:yellow; font-size:14px; display:inline-block; margin-top:0px;">@Html.ValidationMessageFor(model => model.Email)</p>

                    <div class="styled-input w3ls-text" style="margin-top:10px; margin-bottom:0px;">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required" })
                        @Html.LabelFor(model => model.PhoneNumber)
                        <span></span>
                    </div>
                    <p style="color:yellow; font-size:14px; display:inline-block; margin-top:0px;">@Html.ValidationMessageFor(model => model.PhoneNumber)</p>

                    <div class="styled-input w3ls-text" style="margin-top:10px; margin-bottom:0px;">
                        @Html.PasswordFor(model => model.Password, new { required = "required" })
                        @Html.LabelFor(model => model.Password)
                        <span></span>
                    </div>
                    <p style="color:yellow; font-size:14px; display:inline-block; margin-top:0px;">@Html.ValidationMessageFor(model => model.Password)</p>


                    <div class="wthree-text">
                        <p>
                            <input name="Agree" type="checkbox" id="brand" value="true">
                            <label for="brand"><span></span>I accept the terms of use</label>
                        </p>
                    </div>
                    <div class="agileits-bottom">
                        <input type="submit" value="Sign Up">
                    </div>


                }
            </div>
            <p style="color:yellow; text-align:center; margin-top:20px; margin-bottom:-20px; font-size:20px;">@Html.ValidationMessage("Error")</p>
            <div class="w3agile-btm">
                <p>Already a member ? <a href="~/Home/SignIn">Sign In</a> </p>
            </div>
        </div>
    </div>
    <!-- //main -->
    <!-- copyright -->
    <div class="copyright">
        <p style="color:black">© 2018 <a href="~/Home/Index">FitnessTime</a>. All rights reserved.</p>
    </div>
    <!-- //copyright -->
</body>
</html>