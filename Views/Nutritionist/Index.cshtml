            <div class="navbar-collapse">
                <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="~/Nutritionist/Index" class="active"><i class="fa fa-home nav_icon"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="~/Nutritionist/NewRequests"><i class="fa fa-users nav_icon"></i>Appointments Requests</a>
                        </li>
                        <li>
                            <a href="~/Nutritionist/Notifications"><i class="fa fa-bullhorn nav_icon"></i>Notifications</a>
                        </li>
                        <li>
                            <a href="~/Nutritionist/SendTips"><i class="fa fa-pencil-square-o nav_icon"></i>Send Tips</a>
                        </li>
                        <li>
