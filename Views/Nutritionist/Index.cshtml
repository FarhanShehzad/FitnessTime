                <button id="showLeftPush"><i class="fa fa-bars"></i></button>
                <!--toggle button end-->
                <!--logo -->
                <div class="logo">
                    <a href="~/Nutritionist/Index">
                        <h1>FitnessTime</h1>
                        <span>AdminPanel</span>
                    </a>
                </div>
                <!--//logo-->

                <div class="clearfix"> </div>
            </div>
            <div class="header-right">
                <div class="profile_details_left">
                    <!--notifications of menu start -->
                    <ul class="nofitications-dropdown">

                        <li class="dropdown head-dpdn">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-bell"></i><span class="badge blue">@ViewBag.NewsCount</span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="notification_header">
                                        <h3>You have @ViewBag.NewsCount new notification</h3>
                                    </div>
                                </li>

                                @{
                                    int i = 0;
                                    foreach (FitnessTime.Models.News news in allTimeNews)
                                    {
                                        <li style="width: 220px; overflow: hidden; white-space: nowrap;  text-overflow: ellipsis;">
                                            <a href="~/Nutritionist/Notifications">
                                                <div class="user_img"><img src="~/images/Profile/@news.User.Picture" width="34" height="34" alt=""></div>
                                                <div class="notification_desc" style="width: 140px; overflow: hidden; white-space: nowrap;  text-overflow: ellipsis;">
                                                    <p>@news.Subject</p>
                                                    <p><span>@news.Date.ToShortTimeString() - @news.Date.ToShortDateString()</span></p>
                                                </div>
                                                <div class="clearfix"></div>
                                            </a>
                                        </li>
                                        i++;
                                        if (i == 3)
                                        {
                                            break;
                                        }
                                    }
                                }

                                <li>
                                    <div class="notification_bottom">
                                        <a href="~/Nutritionist/Notifications">See all notifications</a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                    <div class="clearfix"> </div>
                </div>


                <!--notification menu end -->
                <div class="profile_details">
                    <ul>
                        <li class="dropdown profile_details_drop">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <div class="profile_img">
                                    <span class="prfil-img"><img src="~/images/Profile/@Session["Picture"]" alt="" width="50" height="50" style="border-radius: 50%"> </span>
                                    <div class="user-name">
                                        <p>@Session["Name"]</p>
                                        <span>@Session["Authority"]</span>
                                    </div>
                                    <i class="fa fa-angle-down lnr"></i>
                                    <i class="fa fa-angle-up lnr"></i>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                            <ul class="dropdown-menu drp-mnu">
                                <li> <a href="~/Nutritionist/ProfileSettings"><i class="fa fa-user"></i> Profile</a> </li>
                                <li> <a href="~/Nutritionist/Logout"><i class="fa fa-sign-out"></i> Logout</a></li>
